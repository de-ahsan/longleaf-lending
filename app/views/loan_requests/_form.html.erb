<% if @loan_request.current_step == '1' %>
  <div class="mb-4">
    <label for="address" class="block text-sm font-medium text-gray-700">Target Property*</label>
    <small>Address, City, State, & Zip for your target property</small>
    <%= form.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
<% elsif @loan_request.current_step == '2' %>
  <div class="mb-4">
    <label for="loan_term" class="block text-sm font-medium text-gray-700">Loan Term*</label>
    <small>How many months do you want the loan for (up to 12)?</small>
    <%= form.number_field :loan_term, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
<% elsif @loan_request.current_step == '3' %>
  <div class="mb-4">
    <label for="purchase_price" class="block text-sm font-medium text-gray-700">Purchase Price*</label>
    <small>What are you purchasing the property for? Please include any assignment fee.</small>
    <br>
    <small>*Our sample term sheet will set a maximum loan-to-cost of 90%.</small>
    <%= form.number_field :purchase_price, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
<% elsif @loan_request.current_step == '4' %>
  <div class="mb-4">
    <label for="repair_budget" class="block text-sm font-medium text-gray-700">Estimated Repair Budget*</label>
    <small>Full budget expected to rehab the property.</small>
    <%= form.number_field :repair_budget, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
<% elsif @loan_request.current_step == '5' %>
  <div class="mb-4">
    <label for="arv" class="block text-sm font-medium text-gray-700">After Repair Value*</label>
    <small>What do you think the property's market value will be when you complete the rehab?</small>
    <br>
    <small>*Our sample term sheet will set a maximum loan-to-value of 70%</small>
    <%= form.number_field :arv, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
<% elsif @loan_request.current_step == '6' %>
  <div class="mb-4">
    <label for="first_name" class="block text-sm font-medium text-gray-700">First Name</label>
    <%= form.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
   <div class="mb-4">
    <label for="last_name" class="block text-sm font-medium text-gray-700">Last Name</label>
    <%= form.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
  <div class="mb-4">
    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
    <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
  <div class="mb-4">
    <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
    <%= form.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
<% end %>
